<!DOCTYPE html>
<html>
<head>

  <title>Join</title>
  <link rel="stylesheet" href="/styles.css">

</head>
<body>
  
  <% if (locals.user) {%>
    <h1>Join the club</h1>
    <%- include("partials/errors.ejs") %>
    <form action="/join" method="POST">
        <label for="passcode">Enter the secret passcode:</label>
        <input id="passcode" name="passcode" placeholder="passcode" type="text" />
        <button>Enter the club</button>
    </form>
    <a href="/">Homepage</a>
    <a href="/logout">Log out</a>
  <% } else { %>
    <%- include("partials/signInOrUp.ejs") %>
  <%}%>
  
  
</body>
</html>
