<!DOCTYPE html>
<html>
<head>

  <title>Members only</title>
  <link rel="stylesheet" href="/styles.css">

</head>
<body>
  <h1>Members only</h1>
  <div class="sidebar">
    <% if (locals.user) {%>
    
      <h1>Welcome back <%= user.first_name %></h1>
      <a href="/create">Create a new message</a>
      <% if (locals.user.membership_status == "active") {%>
        <h2>Membership status: active</h2>
      <% } else { %>
        <a href="/join">Join the club</a>
      <%}%>
      <a href="/logout">Log out</a>
    <% } else { %>
      <%- include("partials/signInOrUp.ejs") %>
    <%}%>
  </div>
  <div class="messages">
    <% if (locals.user) {%>
      <ul>
        <% messages.forEach((message) => { %>
          <%- include('partials/message.ejs', {message: message}); %>
        <% }); %>
    </ul>
    <%}%>
  </div>

  

  
</body>
</html>
